@inject ILocalizationService Localization

<div class="error-content d-grid" style="place-content: center">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title">@Localization.GetString(ResourceKeys.ErrorBoundaryContent_ErrorOccurred)</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Localization.GetString(ResourceKeys.ErrorBoundaryContent_Unexpected)</p>
            <pre class="bg-secondary p-3">@Error.Message</pre>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-secondary" @onclick="OnHandle">@Localization.GetString(ResourceKeys.ErrorBoundaryContent_Ok)</button>
        </div>
    </div>
</div>



@code {
    [Parameter, EditorRequired]
    public Exception Error { get; set; } = new();

    [Parameter, EditorRequired]
    public EventCallback OnHandle { get; set; }


}


<style type="text/css">
    .error-content {
        position: fixed;
        top: 0;
        left: 0;
        right:0;
        bottom: 0;
        background-color: transparent;
    }
        
   
</style>
