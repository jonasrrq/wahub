</button>

@code {
    private async Task ToggleSidebar()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("toggleMobileNav");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling mobile navigation: {ex.Message}");
        }
    }
}
